<%- include('./partials/header', { page : "product", title : `${product.name} - oCoffee`}) %>

<div class="container">
    <main>
        <section class="section__banner section__banner--product">
            <div class="banner__container">
                <h2 class="banner__title"><%= product.name %></h2>
            </div>
        </section>

        <section class="section__product">
            <div class="product__publication-date">Publié le <time datetime="<%= product.date.year %>-<%= product.date.month %>-<%= product.date.day %>"><%= product.date.day %>/<%= product.date.month %>/<%= product.date.year %></time></div>
            <h3 class="product__title"><%= product.name %></h3>
            <div class="product__origin">Origine : <%= product.origin %></div>
            <p class="product__description"><%= product.description %></p>
            <div class="product__feature">
                Caratéristique principale : <span><%= product.main_feature %></span>
            </div>
            <div class="product__price">Prix au kilo : <%= product.price_kilo %>€</div>
            <div class="product__availability <%=product.availability ? 'available' : 'not-available'%>">
                <%=product.availability ? 'Disponible' : 'Indisponible'%>
            </div>
        </section>

        <a class="btn" href="/catalog" title="Revenir au catalogue">Catalogue</a>
    </main>

</div>

<%- include('./partials/footer') %>