<%- include('./partials/admin-header', { title : "Catégories - Admin/oCoffee"}) %>

    <h1>Les catégories </h1>

    <a class="btn btn--left" href="/admin/categories/add" title="Ajouter une nouvelle catégorie">Ajouter une catégorie</a>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Nombre de produits</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
                <% for( let category of locals.categories) { %>
                    <tr>
                        <td><%= category.name %></td>
                        <td><%= category.total %></td>
                        <td><a class="table__actions" href="/admin/categories/update/<%= category.id %>">Modifier</a></td>
                        <td><a class="table__actions table__actions--delete" href="/admin/categories/delete/<%= category.id %>">Supprimer</a></td>
                    </tr>
                <% } %>
        </tbody>
    </table>
    
</main>


<%- include('./partials/admin-footer') %>